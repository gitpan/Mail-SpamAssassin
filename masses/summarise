#!/bin/sh

total=`cat spam.log nonspam.log | wc -l | awk '{print $1}'`
ny=`grep '^Y' nonspam.log | wc -l | awk '{print $1}'`
nn=`grep '^\.' nonspam.log | wc -l | awk '{print $1}'`
yy=`grep '^Y' spam.log | wc -l | awk '{print $1}'`
yn=`grep '^\.' spam.log | wc -l | awk '{print $1}'`

echo "Correctly non-spam: $nn"
echo "Correctly spam:     $yy"
echo "False positives:    $ny"
echo "False negatives:    $yn"
echo "TOTAL:              $total"
